<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Degradado de fondo -->
    <View
        android:id="@+id/degradadoFondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/degradado_fondo"/>

    <!-- Logo del banco -->
    <ImageView
        android:id="@+id/logoBanco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/android_robot"
        android:layout_centerInParent="true"/>

    <!-- Texto con el nombre del proyecto -->
    <TextView
        android:id="@+id/nombreProyecto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="banco_movil"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_below="@id/logoBanco"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>
</RelativeLayout>
